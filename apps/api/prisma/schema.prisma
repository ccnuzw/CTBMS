// 任务类型枚举 (12种)
enum IntelTaskType {
  // 1. 常规汇报
  DAILY_REPORT       // 市场日报
  WEEKLY_REPORT      // 周报
  MONTHLY_REPORT     // 月报
  RESEARCH_REPORT    // 深度研报

  // 2. 一线采集
  PRICE_COLLECTION   // 价格采集
  INVENTORY_CHECK    // 库存盘点
  FIELD_VISIT        // 实地走访
  COMPETITOR_INFO    // 竞对情报

  // 3. 特定事件
  POLICY_ANALYSIS    // 政策解读
  URGENT_VERIFICATION // 紧急核实
  EXHIBITION_REPORT  // 会议/展会纪要

  // 4. 数据维护
  RESOURCE_UPDATE    // 客商/档案更新
  
  // 兼容旧枚举 (如果需要)
  PRICE_REPORT       // @deprecated
  FIELD_CHECK        // @deprecated
  DOCUMENT_SCAN      // @deprecated
}

// 任务优先级枚举
enum IntelTaskPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

// 任务周期类型
enum TaskCycleType {
  DAILY
  WEEKLY
  MONTHLY
  ONE_TIME
}

// 任务状态枚举
enum IntelTaskStatus {
  PENDING
  SUBMITTED // 已提交待审核
  RETURNED  // 已驳回需修改
  COMPLETED
  OVERDUE
}

