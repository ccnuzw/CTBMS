{
  "name": "ctbms-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:api": "turbo run build --filter=api",
    "build:web": "turbo run build --filter=web",
    "dev": "turbo run dev",
    "dev:api": "turbo run dev --filter=api",
    "dev:web": "turbo run dev --filter=web",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "workflow:smoke": "node scripts/workflow-smoke-runner.mjs --mode=base",
    "workflow:smoke:extended": "node scripts/workflow-smoke-runner.mjs --mode=extended",
    "workflow:smoke:gate": "node scripts/workflow-smoke-runner.mjs --mode=gate",
    "workflow:risk-gate:contract:smoke": "pnpm --filter api run workflow:risk-gate:contract:smoke",
    "workflow:backfill:risk-summary:dry-run": "pnpm --filter api run workflow:risk-summary:backfill:dry-run",
    "workflow:backfill:risk-summary:report": "pnpm --filter api run workflow:risk-summary:backfill:report",
    "workflow:perf:risk-gate": "pnpm --filter api run workflow:perf:risk-gate",
    "workflow:perf:risk-gate:gate": "pnpm --filter api run workflow:perf:risk-gate:gate",
    "workflow:reports:validate": "node scripts/workflow-report-validate.mjs",
    "workflow:reports:validate:strict": "node scripts/workflow-report-validate.mjs --require-smoke-success --require-smoke-mode=gate --require-perf-no-violations",
    "workflow:reports:validate:self-check": "node scripts/workflow-report-validate-self-check.mjs",
    "workflow:reports:summary": "node scripts/workflow-report-summary.mjs",
    "workflow:reports:summary:self-check": "node scripts/workflow-report-summary-self-check.mjs",
    "workflow:summary:renderers:self-check": "node scripts/workflow-summary-renderers-self-check.mjs",
    "workflow:summary:self-check:all": "node scripts/workflow-summary-self-check-all.mjs",
    "workflow:summary:self-check:all:self-check": "node scripts/workflow-summary-self-check-all-self-check.mjs",
    "workflow:summary:self-check:report:validate": "node scripts/workflow-summary-self-check-report-validate.mjs",
    "workflow:summary:self-check:report:validate:self-check": "node scripts/workflow-summary-self-check-report-validate-self-check.mjs",
    "workflow:ci:step-summary": "node scripts/workflow-ci-step-summary.mjs",
    "workflow:ci:step-summary:self-check": "node scripts/workflow-ci-step-summary-self-check.mjs",
    "workflow:quality:gate:self-check": "node scripts/workflow-quality-gate-self-check.mjs",
    "workflow:quality:gate": "node scripts/workflow-quality-gate-runner.mjs",
    "workflow:quality:report:validate": "node scripts/workflow-quality-gate-report-validate.mjs",
    "workflow:quality:report:validate:self-check": "node scripts/workflow-quality-gate-report-validate-self-check.mjs",
    "workflow:quality:validation:guidance:self-check": "node scripts/workflow-quality-gate-validation-guidance-self-check.mjs",
    "workflow:quality:report:summary": "node scripts/workflow-quality-gate-report-summary.mjs",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "turbo": "^1.10.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "packageManager": "pnpm@9.0.0"
}
