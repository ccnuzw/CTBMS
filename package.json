{
  "name": "ctbms-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:api": "turbo run build --filter=api",
    "build:web": "turbo run build --filter=web",
    "dev": "turbo run dev",
    "dev:api": "turbo run dev --filter=api",
    "dev:web": "turbo run dev --filter=web",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "workflow:smoke": "node scripts/workflow-smoke-runner.mjs --mode=base",
    "workflow:smoke:extended": "node scripts/workflow-smoke-runner.mjs --mode=extended",
    "workflow:smoke:gate": "node scripts/workflow-smoke-runner.mjs --mode=gate",
    "workflow:risk-gate:contract:smoke": "pnpm --filter api run workflow:risk-gate:contract:smoke",
    "workflow:backfill:risk-summary:dry-run": "pnpm --filter api run workflow:risk-summary:backfill:dry-run",
    "workflow:backfill:risk-summary:report": "pnpm --filter api run workflow:risk-summary:backfill:report",
    "workflow:perf:risk-gate": "pnpm --filter api run workflow:perf:risk-gate",
    "workflow:perf:risk-gate:gate": "pnpm --filter api run workflow:perf:risk-gate:gate",
    "workflow:reports:validate": "node scripts/workflow-report-validate.mjs",
    "workflow:quality:gate": "pnpm workflow:smoke:gate && pnpm workflow:perf:risk-gate:gate && pnpm workflow:reports:validate",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "turbo": "^1.10.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "packageManager": "pnpm@9.0.0"
}
